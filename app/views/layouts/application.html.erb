<!DOCTYPE html>
<html>
<head>
  <title>Jungle</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render 'layouts/top_nav' %>

  <main class="container">
    <% if current_user %>
      Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
    <% else %>
      <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
    <% end %>

    <% if active_sale? %>
      <p class="alert alert-info">
        There's an active <%= "Back to school" %> sale going on!
        <strong>Everything is <%= 15 %>% off!</strong>
      </p>
    <% end %>

    <%# without any args, yield will render template of current controller/action %>
    <%= yield %>
  </main>

  <%= yield :end_of_body %>
</body>
</html>
