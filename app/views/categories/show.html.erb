<%# debug @category # renders code tag with serialized yaml version of obj %>

<section class="categories-show">

  <header class="page-header">
    <h1>
      <%# raise @category.inspect # debug %>
      <%= @category.name %>
      <small>(<%= pluralize @products.size, 'product' %>)</small>
    </h1>
  </header>

  <div class="products">
    <%= render @products %>
  </div>

</section>
